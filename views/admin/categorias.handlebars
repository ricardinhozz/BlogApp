<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>


{{#each categorias}}
    <div class="card mt-3">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação: {{date}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-4">Editar</button></a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Delete</button>
            </form>
        </div>
    </div>
{{else}}
    <div class="card  mt-3">
        <div class="card-body">
            <h4>Nenhuma categoria foi registrada até o momento.</h4>
        </div>
    </div>

{{/each}}